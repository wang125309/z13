@import '~normalize.css'
@import 'var.styl'
@import 'hairline.styl'
* {
  outline: none;
  -webkit-user-select: none;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
  border: none;
  &:active {
    outline: none;
  }
  &:active {
  
  }
  input {
    -webkit-user-select: initial;
  }
}

body {
  position: absolute;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  -webkit-font-smoothing: antialiased;
  background-color: $background-default;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif,  PingFang SC,Helvetica Neue,Hiragino Sans GB,Helvetica,Microsoft YaHei,Arial;
  box-sizing: border-box;
  #app {
    margin: 0;
    padding: 0;
    font-size: $font-size-base;
  }
}


